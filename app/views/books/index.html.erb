<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>
  <tr>
   <td>
    <span><%= book.title %></span>
   </td>

   <td>
    <span><%= book.body %></span>
   </td>

   <td class="link">
    <%= link_to 'Show', book_path(book.id) %>
   </td>

   <td class="link">
    <%= link_to 'Edit', edit_book_path(book.id) %>
   </td>

   <td class="link">
    <%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
   </td>

  <% end %>

 </tbody>

</table>


<h2>New book</h2>
<%= render 'form', book: @book %>
